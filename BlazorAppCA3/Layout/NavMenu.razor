<nav class="navbar navbar-expand-lg mynavbar">
    <div class="container">
        <a class="navbar-brand" href="/">BlazorAppCA3</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link @(NavActive("/motorcycles") ? "active" : "")" href="/motorcycles">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(NavActive("/refinedSearch") ? "active" : "")" href="/refinedSearch">Refined Search</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool NavActive(string href)
    {
        var currentUri = NavigationManager.Uri;
        return currentUri.EndsWith(href, StringComparison.OrdinalIgnoreCase);
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
}
